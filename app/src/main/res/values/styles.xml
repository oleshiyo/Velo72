<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="generalnotitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#43CBA4</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">-8dp</item>
        <item name="tabPaddingEnd">-8dp</item>
        <item name="tabTextAppearance">@style/TabItem</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="TabItem" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#4E5386</item>
    </style>

</resources>
